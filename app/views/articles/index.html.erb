<h1>Articles:</h1>
<% @articles.each do |article| %>
    <b><%=h article.title %></b><br>
    Category: <%=h @categories.find{ |c| c.id == article.category_id}.name %>
	, created at: <%= article.created_at%><br>
	Author: <%= @editors.find{|a| a.id == article.editor_id}.email %><br>
    <%= truncate_html(article.content,:length => 500) %>
    <%= link_to 'Show', article %>
	<%if editor_signed_in?%>
    <%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
	<%= link_to 'Edit', edit_article_path(article) %>
	<%end%>
	<hr>
<% end %>
<%= will_paginate(@articles) %>
<%if editor_signed_in?%>
<%= link_to 'New article', new_article_path %>
<%end%>
