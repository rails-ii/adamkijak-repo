<h1>Editing article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => "mceEditor", :cols => 80 %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= f.select :category_id, @categories.map { |c| [c.name,c.id]}, :required => true %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>
